@model TraversalCoreProject.Models.MailRequest

@{
    ViewData["Title"] = "Mail Gönder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Mail Gönder</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.ReceiverMail, "Alıcı Mail Adresi")
        @Html.TextBoxFor(m => m.ReceiverMail, new { @class = "form-control", placeholder = "ornek@mail.com" })
        @Html.ValidationMessageFor(m => m.ReceiverMail, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Subject, "Konu Başlığı")
        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Konu başlığı giriniz" })
        @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Body, "Mesaj İçeriği")
        @Html.TextAreaFor(m => m.Body, new { @class = "form-control", rows = 5, placeholder = "Mesajınızı buraya yazınız" })
        @Html.ValidationMessageFor(m => m.Body, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Mail Gönder</button>
</form>
