@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yorum Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı</th>
        <th>Rota</th>
        <th>Tarih</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CommentID</td>
            <td>@(!string.IsNullOrEmpty(item.CommentUser) ? item.CommentUser : "Anonim")</td>
            <td>@(item.Destination1 != null ? item.Destination1.City : "Rota Yok")</td>
            <td>@(item.CommentDate != default(DateTime) ? item.CommentDate.ToString("dd-MMM-yyyy") : "Tarih Yok")</td>
            <td>
                <a href="/Admin/Comment/DeleteComment/@item.CommentID" class="btn btn-outline-danger">Sil</a>
            </td>
        </tr>
    }
</table>
